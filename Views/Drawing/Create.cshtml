@model CDB.Models.Drawing.CreateViewModel
<form asp-action="Create" method="post">
        <h3 class="text-muted">Create A New Board</h3>
        <div class="mt-3">
            <label>Your Name</label>
            <input class="form-control" type="text" asp-for="UserName" value="@Model.UserName" placeholder="Your name" />
        </div>
        <div class="mt-2">
            <label>Bord Name</label>
            <input class="form-control" type="text" asp-for="Name" value="@Model.Name" placeholder="Unique Board name" />
        </div>
        <button type="submit" class="btn btn-primary mt-1">Create</button>
    
</form>
